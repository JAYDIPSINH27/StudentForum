<%- include('partials/header') %>
<div class="box">
  <!-- <h1>Answer the Question</h1> -->
  <h2><%=q.question%></h2>

  <form class="question-frm" action="/submitAnswer" method="post">
    <input type="hidden" name="questionId" value=<%=q._id%> >

    <label for="answer">Write an Appropriate Answer<span>*</span></label>

    <textarea class="form-control" name="answer" rows="5" cols="40" placeholder=" Your statements must be answered the question."  required></textarea>
    <br2></br2>

    <label for="link">Link (Optional)</label>
    <input type="text" class="form-control" name="link" placeholder="Provide a link if needed (write only one link)" autocomplete="off">
    <br2></br2>
    <br2></br2>

    <div class="buttons">
      <button class="btn btn-outline-dark btn-question" type="reset" name="reset">Reset</button>
      <!-- If answer is null then it wan't be submit... add this feature. -->
      <button class="btn btn-dark btn-question" type="submit" name="sumbit">Submit</button>
    </div>
  </form>
</div>
